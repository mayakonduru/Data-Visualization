import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

df = pd.read_csv('Downloads/INST326/world-happiness-report-2021.csv')

display(df.head())

plt.figure(figsize=(10,6))
plt.hist(df['Ladder score'], bins=20, color = 'blue', edgecolor= 'black')
plt.title('Distribution of Happiness Scores')
plt.xlabel('Happiness Score')
plt.ylabel('Number of Countries')
plt.grid(True)
plt.show()

sns.jointplot(data=df, x='Social support', y='Ladder score', kind = 'reg', height = 8)
plt.suptitle('Relationship Between Social Support and Happieness Score', y = 1)
plt.show()
